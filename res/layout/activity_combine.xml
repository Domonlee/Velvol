<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical"
    tools:context=".CombineActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#14ae68" >

        <ImageView
            android:id="@+id/combine_return"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/particular_return" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginRight="35dp"
            android:gravity="center_horizontal"
            android:text="多人拼单"
            android:textColor="#fff"
            android:textSize="20sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:src="@drawable/test3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="13dp"
        android:background="#fff"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="13dp"
            android:text="输入您的小伙伴们的房间密码，即可进入房间与小伙伴们一起拼单啦！"
            android:textColor="#000"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/combine_editText1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/modification_et"
            android:hint="请输入房间密码"
            android:textColorHint="#aaaaaa" />
        <ImageView 
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:layout_marginTop="13dp"
            android:scaleType="fitXY"
            android:src="@drawable/find_layout3"
            />
    </LinearLayout>

</LinearLayout>