<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:orientation="vertical" >

    <include
        android:id="@+id/title_top_layout"
        layout="@layout/base_title_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/base_color_green"
        android:padding="10dp"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/indent_account_changeaddressto_seek_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_backgorund"
            android:paddingLeft="40dp"
            android:ems="10"
            android:textSize="13dp"
            android:hint="请输入街道，写字楼，学校，小区" >

            <requestFocus />
        </EditText>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/indent_account_changeaddress_seekto_et"
            android:layout_alignLeft="@+id/indent_account_changeaddress_seekto_et"
            android:layout_alignTop="@+id/indent_account_changeaddress_seekto_et"
            android:padding="5dp"
            android:src="@drawable/search" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:layout_marginBottom="5dp"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/indent_account_changeaddressto_particular_site_et"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/ed_background"
            android:gravity="top"
            android:hint="输入详细的楼层，门牌号。"
            android:layout_margin="10dp"
            android:ems="10" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:layout_marginBottom="1dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:src="@drawable/change_addr_history_icon" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="历史地址" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:layout_marginBottom="1dp"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/indent_account_changeaddressto_history_site_lv"
            android:layout_width="match_parent"
            android:layout_height="200dp">
        </ListView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical" >

        <Button
            android:id="@+id/indent_account_changeaddressto_history_empty_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:text="清空历史" />

    </LinearLayout>

</LinearLayout>