<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:orientation="vertical" >
<!-- 房间6666 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#14ae68" >

        <ImageView
            android:id="@+id/room_return_imageView"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:clickable="true"
            android:scaleType="fitXY"
            android:src="@drawable/particular_return" />

        <TextView
            android:id="@+id/room_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="35dp"
            android:gravity="center_horizontal"
            android:text="房间6666"
            android:layout_marginTop="5dp"
            android:textColor="#ffffff"
            android:textSize="20sp" />
         </LinearLayout>
    <!-- 房主，拼单人数 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#ffffff"
        android:paddingTop="3dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="13dp"
            android:paddingRight="3dp"
            android:text="房主："
            android:textSize="10sp"
            android:textColor="#8A8A8A" />

        <TextView
            android:id="@+id/room_master_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="60dp"
            android:textSize="10sp"
            android:text="zhangsan" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="50dp"
            android:paddingRight="5dp"
            android:textSize="10sp"
            android:text="拼单人数："
            android:textColor="#8A8A8A" />

        <TextView
            android:id="@+id/room_merge_many"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:textSize="10sp"
            android:text="2" />
    </LinearLayout>
<!-- 共计  头像  名称 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#ffffff"
        android:orientation="vertical" >
<!-- 共计 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:paddingRight="3dp"
                android:text="共计："
                android:textColor="#8A8A8A"
                android:textSize="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:textColor="#E7352B"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/room_merge_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#E7352B"
                android:textSize="10sp"
                android:text="125" />

        </LinearLayout>
<!-- 头像 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <com.velvol.o2o.view.CircularImage
                android:id="@+id/room_master_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/ic_launcher"
                 />

            <com.velvol.o2o.view.CircularImage
                android:id="@+id/room_friend_image1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/ic_launcher"
                 />

            <com.velvol.o2o.view.CircularImage
                android:id="@+id/room_friend_image2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/ic_launcher"
                />
        </LinearLayout>
<!-- 名称 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="10dp"
                android:text="房主" />

            <TextView
                android:id="@+id/room_friend_name1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="10dp"
                android:text="yiyao"/>

            <TextView
                android:id="@+id/room_friend_name2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="10dp"
                android:text="lilist" />
        </LinearLayout>
    </LinearLayout>

    <!-- 请求加入房间 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        android:background="#ffffff"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/room_requestitem_listView1"
            android:layout_width="match_parent"
            android:layout_height="55dp" >
        </ListView>
    </LinearLayout>
<!-- 大家点的菜 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:background="#ffffff"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:layout_gravity="center"
            android:src="@drawable/everyone_food" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="13dp"
            android:text="大家点的菜" />
    </LinearLayout>
<!-- 展现大家点的菜的listview（包含房主的点菜Listview和朋友点菜的Listview） -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="#FFFFFF"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/room_commonfood_listview"
            android:layout_width="match_parent"
            android:layout_height="160dp" >
        </ListView>
    </LinearLayout>
<!-- 继续点菜  确认点菜 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/room_continueorder_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:paddingLeft="2dp"
            android:paddingRight="5dp"
            android:paddingTop="2dp"
            android:src="@drawable/continue_order" />

        <ImageView
            android:id="@+id/room_confirmorder_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_weight="1"
            android:paddingLeft="5dp"
            android:paddingRight="2dp"
              android:paddingTop="2dp"
            android:src="@drawable/determine_order" />

    </LinearLayout>

</LinearLayout>