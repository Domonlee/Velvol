<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:gravity="center_vertical">
        <com.velvol.o2o.view.CircularImage
            android:id="@+id/user_img"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_margin="5dp" />
        <TextView android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="zhangyanyan"
            android:textColor="#a4a4a4"
            android:layout_marginRight="10dp"/>
        <TextView android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2014-11-27"
            android:gravity="right"
            android:textColor="#a4a4a4"
            android:layout_marginRight="10dp"/>
    </LinearLayout>
	<TextView android:id="@+id/context"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:minHeight="20dp"
	    android:text="我是评价我是评价我是评价我是评价我是评价我是评价我是评价我是评价."
	    android:paddingLeft="10dp"
	    android:textColor="#434343"
	    android:layout_margin="5dp"
	    />
	
	<View android:layout_width="fill_parent" android:layout_height="1dp" android:background="#eeeeee" />
</LinearLayout>
