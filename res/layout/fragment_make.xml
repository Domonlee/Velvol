<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RadioGroup
        android:id="@+id/home_radio_button_group"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:background="@drawable/home_top"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/like"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/top_tab_check"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/home_top1"
            android:gravity="center"
            android:text="我喜欢"
            android:textColor="@color/top_textview"
            android:textSize="14sp" />

        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/pink" />

        <RadioButton
            android:id="@+id/late"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/top_tab_check"
            android:button="@null"
            android:drawableTop="@drawable/home_top2"
            android:gravity="center"
            android:text="最近点餐"
            android:textColor="@color/top_textview"
            android:textSize="14sp" />

        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/pink" />

        <RadioButton
            android:id="@+id/recommend"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/top_tab_check"
            android:button="@null"
            android:drawableTop="@drawable/home_top3"
            android:gravity="center"
            android:text="推荐菜品"
            android:textColor="@color/top_textview"
            android:textSize="14sp" />

        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/pink" />

        <RadioButton
            android:id="@+id/privilege"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/top_tab_check"
            android:button="@null"
            android:drawableTop="@drawable/home_top4"
            android:gravity="center"
            android:text="优惠"
            android:textColor="@color/top_textview"
            android:textSize="14sp" />
    </RadioGroup>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#e0e0e0" />

    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ScrollView
            android:id="@+id/main_scroll"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true" >

            <com.velvol.o2o.view.MyGridView
                android:id="@+id/gridview"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:numColumns="2" />
        </ScrollView>
    </LinearLayout>

</LinearLayout>