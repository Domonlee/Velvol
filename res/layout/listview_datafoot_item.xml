<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/data_food_day_textview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1dp"
            android:background="#ffffff"
            android:padding="10dp"
            android:text="今天下午"
            android:textColor="#000000"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="#14AE68"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="#ffffff"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/data_food_explain_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="摄入0卡" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/data_foot_left_imageview"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:src="@drawable/datafootr" />

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/data_foot_selected_picture1_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="2dp"
                    android:button="@drawable/data_foot"
                    android:clickable="true" />

                <LinearLayout
                    android:layout_width="70dp"
                    android:layout_height="90dp"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/data_foot_picture1_imageview"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_toRightOf="@+id/data_foot_selected_picture1_checkbox"
                        android:src="@drawable/userface" />

                    <TextView
                        android:id="@+id/data_foot_name1_textview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="红烧牛肉"
                        android:textSize="12dp" />
                </LinearLayout>

                <CheckBox
                    android:id="@+id/data_foot_selected_picture2_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="2dp"
                    android:button="@drawable/data_foot"
                    android:clickable="true" />

                <LinearLayout
                    android:layout_width="70dp"
                    android:layout_height="90dp"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/data_foot_picture2_imageview"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_toRightOf="@+id/data_foot_selected_picture1_checkbox"
                        android:src="@drawable/userface" />

                    <TextView
                        android:id="@+id/data_foot_name2_textview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="红烧牛肉"
                        android:textSize="12dp" />
                </LinearLayout>

                <CheckBox
                    android:id="@+id/data_foot_selected_picture3_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="2dp"
                    android:button="@drawable/data_foot"
                    android:clickable="true" />

                <LinearLayout
                    android:layout_width="70dp"
                    android:layout_height="90dp"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/data_foot_picture3_imageview"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_toRightOf="@+id/data_foot_selected_picture3_checkbox"
                        android:src="@drawable/userface" />

                    <TextView
                        android:id="@+id/data_foot_name3_textview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="红烧牛肉"
                        android:textSize="12dp" />
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>

        <ImageView
            android:id="@+id/data_foot_right_imageview1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:src="@drawable/datafootl" />
    </LinearLayout>

</LinearLayout>