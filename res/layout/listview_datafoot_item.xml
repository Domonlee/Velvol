<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/data_food_day_textview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1dp"
            android:background="#ffffff"
            android:padding="10dp"
            android:text="今天下午"
            android:textColor="#000000"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:layout_marginRight="10dp"
			android:layout_marginLeft="10dp"
            android:background="#14AE68"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="#ffffff"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/data_food_explain_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="      摄入1000卡，你又超标哦，健康饮食从点滴做起健康饮食从点滴做起" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:background="#ffffff"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/data_foot_left_imageview"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:clickable="true"
            android:layout_weight="0.5"
            android:layout_gravity="center_vertical"
            android:src="@drawable/iconfont_qiehuanqizuo" />

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <LinearLayout
                android:layout_width="251dp"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ffffff" >

                    <ImageView
                        android:id="@+id/data_foot_picture1_imageview"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_toRightOf="@+id/data_foot_selected_picture1_imageview"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/userface" />

                    <ImageView
                        android:id="@+id/data_foot_selected_picture2_imageview"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:clickable="true"
                        android:layout_marginRight="5dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/data_foot_selected"
                        android:layout_toRightOf="@+id/data_foot_picture1_imageview"
                         />

                    <ImageView
                        android:id="@+id/data_foot_picture2_imageview"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_toRightOf="@+id/data_foot_selected_picture2_imageview"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/userface" />

                    <ImageView
                        android:id="@+id/data_foot_selected_picture3_imageview"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:clickable="true"
                        android:layout_marginRight="5dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/data_foot_selected"
                        android:layout_toRightOf="@+id/data_foot_picture2_imageview" />

                    <ImageView
                        android:id="@+id/data_foot_picture3_imageview"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_toRightOf="@+id/data_foot_selected_picture3_imageview"
                        android:src="@drawable/userface" />

                    <TextView
                        android:id="@+id/data_foot_name2_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/data_foot_picture2_imageview"
                        android:layout_below="@+id/data_foot_picture2_imageview"
                        android:layout_toLeftOf="@+id/data_foot_selected_picture3_imageview"
                        android:gravity="center"
                        android:text="凉拌鸡丝"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/data_foot_name3_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/data_foot_picture3_imageview"
                        android:layout_alignRight="@+id/data_foot_picture3_imageview"
                        android:layout_below="@+id/data_foot_picture3_imageview"
                        android:gravity="center"
                        android:text="黑胡椒牛柳"
                        android:textSize="12dp" />

                    <ImageView
                        android:id="@+id/data_foot_selected_picture1_imageview"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:clickable="true"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/data_foot_selected" />

                    <TextView
                        android:id="@+id/data_foot_name1_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@+id/data_foot_picture1_imageview"
                        android:layout_below="@+id/data_foot_picture1_imageview"
                        android:layout_toRightOf="@+id/data_foot_selected_picture1_imageview"
                        android:gravity="center"
                        android:text="红烧牛肉"
                        android:textSize="12dp" />

                </RelativeLayout>

            </LinearLayout>
        </HorizontalScrollView>

        <ImageView
            android:id="@+id/data_foot_right_imageview1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:src="@drawable/find_layout_off" />

    </LinearLayout>

</LinearLayout>