<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="center_vertical">
        <RatingBar
            android:id="@+id/lv"
            android:layout_width="wrap_content"
            android:progressDrawable="@anim/ratingstart"
            android:layout_height="23px"
            android:layout_marginLeft="10dp"
            android:isIndicator="true"
            android:stepSize="1"
            android:numStars="5"
            style="@android:attr/ratingBarStyleIndicator"
            />
        <TextView android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="zhangyanyan 2014-11-27"
            android:gravity="right"
            android:textColor="#a4a4a4"
            android:layout_marginRight="10dp"/>
    </LinearLayout>
	<TextView android:id="@+id/context"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:minHeight="20dp"
	    android:text="我是评价我是评价我是评价我是评价我是评价我是评价我是评价我是评价."
	    android:textColor="#434343"
	    android:layout_margin="5dp"
	    />
	<LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="30dp"
	    android:layout_gravity="right"
	    android:layout_marginRight="20dp">
	    	<TextView android:id="@+id/praise"
	    	    android:drawableLeft="@drawable/mymsg_good_red_icon"
	    	    android:text="(15)" 
	    	    android:layout_width="wrap_content"
	    	    android:layout_height="match_parent"
	    	    android:gravity="center"
	    	    android:textColor="#a4a4a4"
	    	    />
	    	<TextView android:id="@+id/reply"
	    	    android:text="回复(15)" 
	    	    android:layout_marginLeft="15dp"
	    	    android:layout_width="wrap_content"
	    	    android:layout_height="match_parent"
	    	    android:gravity="center"
	    	    android:textColor="#a4a4a4"
	    	    />
	</LinearLayout>
	<View android:layout_width="fill_parent" android:layout_height="1dp" android:background="#eeeeee" />
</LinearLayout>
