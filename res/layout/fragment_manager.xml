<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#eeeeee"
    android:fillViewport="true" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#fff" >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="120dp"
            android:orientation="horizontal"
            >
            <com.velvol.o2o.view.CircularImage
                android:id="@+id/icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                />
			<LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:orientation="vertical"
			    android:gravity="center_vertical"
			    android:layout_marginLeft="10dp"
			    >
            <Button
                android:id="@+id/login"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:background="#ed1941"
                android:layout_marginTop="8dp"
                android:text="登录/注册"
                android:layout_gravity="center_vertical"
                android:textColor="#fff"
                android:textSize="15sp" />
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="2"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="登录后可查看个人信息，获得积分奖励等。"
                />
			</LinearLayout>
			
        </LinearLayout>
        
        <TextView 
			    android:layout_width="match_parent"
			    android:layout_height="2dp"
			    android:background="#eeeeee"
			    />
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
			<LinearLayout 
			    android:id="@+id/manager_message"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            >
        <ImageView 
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/manger_message"
            android:scaleType="fitXY"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="消息"
            android:layout_marginLeft="8dp"
            />
        <TextView 
            android:id="@+id/tv_manager_message_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:text="10"
            />
        </LinearLayout>
        
			<TextView 
			    android:layout_width="1dp"
			    android:layout_height="match_parent"
			    android:layout_marginTop="4dp"
			    android:layout_marginBottom="4dp"
			    android:background="#eeeeee"
			    />
        <LinearLayout 
			    android:id="@+id/manager_message"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            >
        <ImageView 
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/manger_integral"
            android:scaleType="fitXY"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="积分"
            android:layout_marginLeft="8dp"
            />
         <TextView 
            android:id="@+id/tv_manager_message_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:text="10"
            />
        </LinearLayout>
        </LinearLayout>
       
        </LinearLayout>
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:layout_marginTop="14dp"
            android:orientation="vertical"
            >
             <LinearLayout
                 android:id="@+id/manager_path"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal"
                 >
                 <ImageView 
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/manger_path"
            android:scaleType="fitXY"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            />
                 <TextView 
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="我的地址"
                     android:layout_marginLeft="15dp"
                     android:layout_gravity="center_vertical"
                     />
             </LinearLayout>
             <TextView 
			    android:layout_width="match_parent"
			    android:layout_height="1dp"
			    android:layout_marginLeft="4dp"
			    android:layout_marginRight="4dp"
			    android:background="#eeeeee"
			    />
             <LinearLayout
                 android:id="@+id/manager_path"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal"
                 >
                 <ImageView 
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/manger_information"
            android:scaleType="fitXY"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            />
                 <TextView 
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="我的资料"
                     android:layout_marginLeft="15dp"
                     android:layout_gravity="center_vertical"
                     />
             </LinearLayout>
             
         </LinearLayout>
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:layout_marginTop="14dp"
            android:orientation="vertical"
            >
             <LinearLayout
                 android:id="@+id/manager_path"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal"
                 >
                 <ImageView 
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/manger_order"
            android:scaleType="fitXY"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            />
                 <TextView 
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="我的订单"
                     android:layout_marginLeft="15dp"
                     android:layout_gravity="center_vertical"
                     />
             </LinearLayout>
             <TextView 
			    android:layout_width="match_parent"
			    android:layout_height="1dp"
			    android:layout_marginLeft="4dp"
			    android:layout_marginRight="4dp"
			    android:background="#eeeeee"
			    />
             <LinearLayout
                 android:id="@+id/manager_path"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal"
                 >
                 <ImageView 
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/manger_words"
            android:scaleType="fitXY"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            />
                 <TextView 
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="留言板"
                     android:layout_marginLeft="15dp"
                     android:layout_gravity="center_vertical"
                     />
             </LinearLayout>
             
         </LinearLayout>
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:layout_marginTop="14dp"
            android:orientation="vertical"
            >
             <LinearLayout
                 android:id="@+id/manager_path"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal"
                 >
                 <ImageView 
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/manger_idea"
            android:scaleType="fitXY"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            />
                 <TextView 
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="意见反馈"
                     android:layout_marginLeft="15dp"
                     android:layout_gravity="center_vertical"
                     />
             </LinearLayout>
             <TextView 
			    android:layout_width="match_parent"
			    android:layout_height="1dp"
			    android:layout_marginLeft="4dp"
			    android:layout_marginRight="4dp"
			    android:background="#eeeeee"
			    />
             <LinearLayout
                 android:id="@+id/manager_path"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal"
                 >
                 <ImageView 
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/manger_about"
            android:scaleType="fitXY"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            />
                 <TextView 
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="关于"
                     android:layout_marginLeft="15dp"
                     android:layout_gravity="center_vertical"
                     />
             </LinearLayout>
             
         </LinearLayout>
    </LinearLayout>

</ScrollView>